<!doctype html>
<html lang="en" class="fonts" data-site-theme="">
	
	<head>		
		{% include "head.njk" %}
	</head>
	
	<body>
	
		<main role="main">
	
			<div class="page-content {{ pageClass }}">
	
				{% include "header.njk" %}

				{% set sections = collections.sections | reverse %}
				{%- for section in sections-%}
					{% include "section.njk" %}
				{%- endfor -%}

				<div class="sub latest">
					<h2>Latest Post</h2>
					{% set latest_posts = collections.posts %}
					{% for post in collections.posts.slice(1,2) %}
						<h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
						<span>{{ post.data.date }}</span>
					{% endfor %}

					<p>...or check out the <a href="/archive/">Archive</a></p>
				</div>

				{% include "footer.njk" %}
	
			</div>
			
		</main>
	
	</body>

</html>
